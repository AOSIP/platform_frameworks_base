<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.android.systemui">

    <!-- DataSwitch tile -->
    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS" />

    <!-- Doze intents -->
    <protected-broadcast android:name="com.android.systemui.doze.pulse" />

    <!-- Locale QS -->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <!-- Pixel Live Wallpapers -->
    <protected-broadcast android:name="com.breel.wallpapers.NOTIFICATION_RECEIVED"/>
    <permission android:name="com.breel.wallpapers.notifications"/>
    <uses-permission android:name="com.breel.wallpapers.notifications"/>

    <!-- Smart space -->
    <uses-permission android:name="com.google.android.apps.nexuslauncher.permission.QSB"/>
    <protected-broadcast android:name="com.google.android.systemui.smartspace.ENABLE_UPDATE"/>
    <protected-broadcast android:name="com.google.android.systemui.smartspace.EXPIRE_EVENT"/>
    <protected-broadcast android:name="com.google.android.systemui.smartspace.CLICK_EVENT"/>

    <!-- Sync tile -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

        <service android:name=".CPUInfoService"
                android:exported="true" />

        <receiver android:name=".BootReceiver" androidprv:systemUserOnly="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    <!-- SystemUI Tuner -->
    <application>
        <activity-alias
            android:name=".tuner.StatusBarTuner"
            android:targetActivity=".tuner.TunerActivity"
            android:icon="@drawable/tuner"
            android:theme="@style/TunerSettings"
            android:label="@string/status_bar"
            android:process=":tuner"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.settings.action.STATUS_BAR_TUNER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity-alias>
    </application>

        <activity android:name=".tuner.NavBarActivity"
                  android:theme="@style/ExTunerSettings"
                  android:label="@string/nav_bar"
                  android:process=":tuner"
                  android:parentActivityName="com.aosip.owlsnest.navigation.NavigationHolder"
                  android:exported="true">
        </activity>

        <activity android:name=".tuner.LockscreenActivity"
                  android:theme="@style/ExTunerSettings"
                  android:label="@string/tuner_lock_screen"
                  android:process=":tuner"
                  android:parentActivityName="com.aosip.owlsnest.lockscreen.LockscreenHolder"
                  android:exported="true">
        </activity>

</manifest>
